#!/usr/bin/env ruby

Dir["#{File.expand_path('../../vendor/cache', __FILE__)}/**"].map { |dir| File.directory?(lib = "#{dir}/lib") ? lib : dir }.each do |folder|
  $:.unshift(folder)
end

$:.push File.expand_path("../../lib", __FILE__)

require 'daemons'
require 'movish_script'

Daemons.daemonize
MovishScript.run(ARGV[0], ARGV[1]) 